<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_grey"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认证照片"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal" >

                <View
                    android:layout_width="55dp"
                    android:layout_height="@dimen/divider_line_width"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:background="@color/theme_blue" />

                <TextView
                    android:id="@+id/_tv_step1"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/bg_state_step_nor"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#fff"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/_tv_step2"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/_tv_step1"
                    android:background="@drawable/bg_state_step_nor"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#fff"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/_tv_step2"
                    android:background="@drawable/bg_state_step_sel"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#fff"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_reg3_shenfen"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_border_r_gray"
                    android:src="@drawable/img_photo_default" >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="个人身份证"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_reg3_jiashi"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_border_r_gray"
                    android:src="@drawable/img_photo_default" >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="驾驶证"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_reg3_xingshi"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_border_r_gray"
                    android:src="@drawable/img_photo_default" >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="行驶证"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_reg3_yunying"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_border_r_gray"
                    android:src="@drawable/img_photo_default" >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="运营证"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_reg3_siji"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_border_r_gray"
                    android:src="@drawable/img_photo_default" >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="司机照片"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_reg3_car"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_border_r_gray"
                    android:src="@drawable/img_photo_default" >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="车辆照片"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_btn_retg_tblue"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="完成"
            android:textColor="#fff"
            android:textSize="18sp" />
    </LinearLayout>

</ScrollView>