<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wzh="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <com.wzh.lgtrans.view.ScrollerNumberPicker
        android:id="@+id/province"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        wzh:itemNumber="5"
        wzh:lineColor="#ffff6000"
        wzh:maskHight="32dp"
        wzh:noEmpty="true"
        wzh:normalTextColor="#777"
        wzh:normalTextSize="16sp"
        wzh:selecredTextColor="#ff000000"
        wzh:selecredTextSize="18sp"
        wzh:unitHight="40dp" />

    <com.wzh.lgtrans.view.ScrollerNumberPicker
        android:id="@+id/city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        wzh:itemNumber="5"
        wzh:lineColor="#ffff6000"
        wzh:maskHight="32dp"
        wzh:noEmpty="true"
        wzh:normalTextColor="#777"
        wzh:normalTextSize="16sp"
        wzh:selecredTextColor="#ff000000"
        wzh:selecredTextSize="18sp"
        wzh:unitHight="40dp" />

    <com.wzh.lgtrans.view.ScrollerNumberPicker
        android:id="@+id/couny"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        wzh:itemNumber="5"
        wzh:lineColor="#ffff6000"
        wzh:maskHight="32dp"
        wzh:noEmpty="true"
        wzh:normalTextColor="#777"
        wzh:normalTextSize="16sp"
        wzh:selecredTextColor="#ff000000"
        wzh:selecredTextSize="18sp"
        wzh:unitHight="40dp" />

</LinearLayout>